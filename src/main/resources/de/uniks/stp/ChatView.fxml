<VBox fx:id="topVbox" prefHeight="2110.0" prefWidth="3469.0" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane id="stack" prefHeight="2074.0" prefWidth="200.0">
         <children>
            <VBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: transparent;">
               <children>
                  <TabPane prefHeight="200.0" prefWidth="271.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab style="-fx-background-color: grey;">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@clock.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <content>
                              <TableView id="emojiTable" prefHeight="200.0" prefWidth="200.0">
                                <columns>
                                  <TableColumn prefWidth="75.0" text="C1" />
                                  <TableColumn prefWidth="75.0" text="C2" />
                                </columns>
                              </TableView>
                           </content>
                        </Tab>
                      <Tab style="-fx-background-color: grey;">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@smile.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Tab>
                    </tabs>
                  </TabPane>
               </children>
            </VBox>
            <VBox id="container" prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: grey;">
               <children>
                  <ListView fx:id="messageListView" prefHeight="200.0" prefWidth="390.0" style="-fx-background-color: grey;" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </StackPane>
      <HBox id="container" alignment="CENTER_LEFT" prefHeight="1.0" prefWidth="3469.0" style="-fx-background-color: white;" />
