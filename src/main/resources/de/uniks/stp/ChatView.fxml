         <children>
            <HBox prefHeight="35.0" prefWidth="4.0" />
            <TextField fx:id="messageTextField" style="-fx-border-color: pink; -fx-background-radius: 6; -fx-border-radius: 6;" />
            <Button id="emojiButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="30.0" style="-fx-background-radius: 20; -fx-background-color: grey;">
               <graphic>
                  <ImageView id="imageView" fitHeight="19.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@grinning-face.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="sendButton" mnemonicParsing="false" style="-fx-background-radius: 6; -fx-background-color: ff9999;" text="%button.send" textFill="WHITE" />
            <HBox prefHeight="35.0" prefWidth="4.0" />
         </children>
      </HBox>
   </children>
