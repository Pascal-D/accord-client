<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox id="root" alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT" spacing="10.0" style="-fx-background-color: #4d5054;" HBox.hgrow="ALWAYS">
         <children>
            <VBox id="messages" alignment="CENTER" style="-fx-pref-height: 1000;" VBox.vgrow="ALWAYS">
               <children>
                  <fx:include source="Message.fxml" />
                  <Label text="Welcome To Accord" textFill="#fffefe">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <HBox id="messagebar" alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT" opacity="0.0" prefHeight="25.0" spacing="10.0" style="-fx-min-height: 40;" VBox.vgrow="ALWAYS">
               <children>
                  <Pane prefHeight="25.0" prefWidth="1.0" />
                  <TextField id="messageField" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="359.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-pref-width: 100;" />
                  <Button id="messageButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="44.0" style="-fx-background-radius: 10; -fx-background-color: #7289da; -fx-min-width: 50;" text="send" />
                  <Pane prefHeight="25.0" prefWidth="1.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
