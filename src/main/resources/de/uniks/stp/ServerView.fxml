<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<HBox id="root" maxHeight="2160.0" maxWidth="3840.0" minHeight="600.0" minWidth="900.0" style="-fx-background-color: #23272a;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox id="channelBox" prefWidth="185.0">
         <children>
            <VBox>
               <children>
                  <Label id="serverName" text="Server Name" textFill="WHITE">
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                  </Label>
                  <Line endX="185.0" fill="#9e9e9e" stroke="#9e9e9e" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label id="textChannel" text="%label.textchannel" textFill="WHITE" />
                  <VBox prefHeight="17.0" prefWidth="75.0">
                     <children>
                        <Label id="general" alignment="CENTER" text="%label.general" textFill="WHITE">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets left="30.0" />
                           </padding>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox id="chatBox" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0" style="-fx-background-color: #4d5054;">
         <children>
            <VBox id="messages" alignment="CENTER" style="-fx-pref-height: 1000000;">
               <children>
                  <fx:include source="Message.fxml" />
                  <Label id="welcomeToAccord" text="%label.welcome_to_accord" textFill="#fffefe">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <HBox id="messagebar" alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT" opacity="0.0" prefHeight="25.0" spacing="10.0" style="-fx-min-height: 40;">
               <children>
                  <Pane prefHeight="25.0" prefWidth="1.0" />
                  <TextField id="messageField" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="359.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-pref-width: 1000000;" />
                  <Button id="messageButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="44.0" style="-fx-background-radius: 10; -fx-background-color: #7289da; -fx-min-width: 50;" text="%button.send" />
                  <Pane prefHeight="25.0" prefWidth="1.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <ScrollPane id="scrollPaneUserBox" hbarPolicy="NEVER" maxWidth="185.0" minWidth="185.0" pannable="true" style="-fx-background-color: #23272a; -fx-background: #23272a;" vbarPolicy="NEVER" HBox.hgrow="ALWAYS">
         <content>
            <VBox id="userBox" alignment="TOP_CENTER" minWidth="185.0" prefWidth="185.0" spacing="8.0">
               <children>
                  <VBox prefHeight="70.0" prefWidth="185.0">
                     <children>
                        <VBox id="currentUserBox" alignment="CENTER" prefHeight="59.0" prefWidth="181.0" />
                        <Line startX="-180.0" stroke="#9e9e9e" />
                     </children>
                  </VBox>
                  <ListView id="onlineUsers" fixedCellSize="36.0" prefHeight="28.0" prefWidth="185.0" style="-fx-background-color: #23272a;" stylesheets="@styles/ListViewStyle.css" />
                  <Line startX="-187.0" stroke="#9e9e9e" />
                  <ListView id="offlineUsers" fixedCellSize="36.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="86.0" prefWidth="185.0" style="-fx-background-color: #23272a;" stylesheets="@styles/ListViewStyle.css" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</HBox>
