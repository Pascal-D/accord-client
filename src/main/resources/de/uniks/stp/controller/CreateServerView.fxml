<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="createServerBox" alignment="CENTER" prefWidth="480.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label id="errorLabel" textFill="#fc0000" VBox.vgrow="ALWAYS">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField id="serverName" promptText="%textfield.server_name">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </TextField>
        <TextField id="inviteLink" promptText="InviteLink">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </TextField>
        <HBox alignment="CENTER" prefHeight="45.0" prefWidth="480.0" spacing="50.0">
            <children>
                <Button id="createServer" mnemonicParsing="false" text="Create" />
                <Button id="joinServer" mnemonicParsing="false" text="Join" />
            </children>
        </HBox>
    </children>
</VBox>
